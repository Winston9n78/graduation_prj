<launch>
    <param name="robot_description" command="$(find xacro)/xacro $(find urdf_rviz)/urdf/xacro/car.urdf.xacro" />

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find urdf_rviz)/config/show_robot.rviz" />
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" output="screen" />
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" />

    <node name="control" pkg="arbotix_python" type="arbotix_driver" output="screen">
        <rosparam command="load" file="$(find urdf_rviz)/config/control.yaml"/>
        <param name="sim" value="true"/>
    </node>

</launch>
