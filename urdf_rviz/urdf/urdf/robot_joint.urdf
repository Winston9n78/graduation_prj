<?xml version="1.0"?>
<robot name="mycar">

    <link name="base_footprint">
            <geometry>
                <box size="0.001 0.001 0.001"/>
            </geometry>        
    </link>

    <link name = "base_link">
        <visual>
            <geometry>
                <box size="0.3 0.2 0.1"/>
                <!-- <cylinder radius="0.1" length="2"/> -->
                <!-- <sphere radius="1"/> -->
                <!-- <mesh filename="package://urdf_rviz/meshes/autolabor_mini.stl"/>                 -->
            </geometry>

            <origin xyz="0.0 0.0 0.0" rpy="0 0.0 0.0"/>
            
            <material name="color">
                <color rgba="1 1 1 0.8"/>
            </material>
            
        </visual>
    </link>

    <link name = "camera">
        <visual>
            <geometry>
                <box size="0.02 0.05 0.05"/>
                <!-- <cylinder radius="0.1" length="2"/> -->
                <!-- <sphere radius="1"/> -->
                <!-- <mesh filename="package://urdf_rviz/meshes/autolabor_mini.stl"/>                 -->
            </geometry>

            <origin xyz="0.0 0.0 0.025" rpy="0 0.0 0.0"/>
            
            <material name="cameracolor">
                <color rgba="0.5 0.5 0.5 0.8"/>
            </material>
            
        </visual>
    </link>

    <joint name="link2footprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.05" rpy="0 0.0 0.0"/>
    </joint>

    <joint name="camerabase" type="continuous">

        <parent link="base_link"/>
        <child link="camera"/>
        <origin xyz="0.12 0.0 0.05" rpy="0 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>      
    </joint>
    
</robot>